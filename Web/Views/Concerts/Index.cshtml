@model List<Web.Models.Concert>

@{
    ViewData["Title"] = "Index";
    Concert c;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Create" asp-controller="Tickets">Buy new ticket</a>
</p>

<div>
@for(int i = 0; i < Model.Count();)
{
    <div>
    @for(int j = 0; j < 3 && i < Model.Count(); j++, i++)
    {
        c = Model[i];
        <div style="width: 30%; margin-right: 3%;display:inline-block;">
            <h3>@c.Name</h3>
            <p>@c.DateAndTime.ToString()</p>
            <p>@c.Place</p>
            <p>@c.Price</p>
            <p>
                <a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@c.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@c.Id">Delete</a>
            </p>
        </div>
    }
    </div>
}
</div>